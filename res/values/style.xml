<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="general"></style>
	
	<style name="notitle" parent="general">
	    <item name="android:windowNoTitle">true</item>
	</style>
	
	<!-- fonts -->
	<style name="LinkText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#06C</item>
    </style>
    
	<style name="LinkText.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    
	<style name="LinkText.Bold.Big">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="user_name" parent="LinkText.Bold.Big">
    </style>
    <style name="user_screen_name" parent="LinkText.Bold.Big">
    </style>
    
    <!-- status bar -->
    <style name="statusbar">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/status_text</item>
        <item name="android:background">@color/status_background</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!--  simple button -->
    <style name="simple_button">
        <item name="android:background">@drawable/simple_button_selector</item>
        <item name="android:textColor">@color/simiple_button_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">7dip</item>
        <item name="android:paddingRight">7dip</item>
    </style>
    
    <style name="follow_button" parent="simple_button">
        <item name="android:background">@drawable/simple_button_blue_selector</item>
    </style>
    
</resources>
